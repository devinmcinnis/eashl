body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color: #333
  text-decoration: none
  cursor: pointer

  &:hover
    color: #00B7FF

h1 a
  color: black

.id,
.name,
.game_id,
td:nth-child(n+16)
  display: none

table
  border-collapse: collapse
  margin: 0 auto

.online-members th,
.online-members td
  display: block
  width: auto

.online-members th
thead tr
  background-color: #EEE

.online-members td:nth-child(odd),
.player-stats tbody tr:nth-child(even)
  background-color: lighten(#EEE, 50%)

th
  width: 50px
  padding: 8px

td
  text-align: center
  padding: 8px

.team-logo
  position: fixed
  bottom: 0px
  left: 5px
  width: 30px

.broken-p
  color: #00B7FF