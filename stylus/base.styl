body
  position: relative
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  text-align: center
  padding-top: 1em
  margin: 0

*
  box-sizing: border-box

.center
  margin: 0 auto

body.timezone
  &:after
    content: ''
    display: inline-block
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, 0.65)

body.timezone-selected
  #timezone
    display: none

a
  color: #333
  text-decoration: none
  cursor: pointer

  &:hover
    color: #00B7FF

h1 a
  color: black

ul
  list-style: none
  padding: 0px

#menu
  li
    display: inline-block
    padding: 0.5em 1em
    padding-left: 0

#timezone
  position: absolute
  top: -210%
  left: 0
  z-index: 100

  text-align: center
  width: 100%
  padding: 0.5em

  -webkit-transition: all 1s ease-in-out
  -moz-transition: all 1s ease-in-out
  transition: all 1s ease-in-out

  p
    font-weight: bold
    font-size: 1.5em

  .center
    max-width: 550px
    padding: 1em
    background: white
    border: 3px solid #333
    border-radius: 2px

  li
    padding: 1.5em 0.5em
    cursor: pointer

    &:nth-child(even)
      background: #EEE

    &:hover
      background-color: #DDD

.id,
.name,
.game_id,
td:nth-child(n+16)
  display: none

table
  border-collapse: collapse
  margin: 0 auto

.online-members th,
.online-members td
  display: block
  width: auto

.online-members th
thead tr
  background-color: #EEE

.online-members td:nth-child(odd),
.player-stats tbody tr:nth-child(even)
  background-color: lighten(#EEE, 50%)

th
  width: 50px
  padding: 8px

td
  text-align: center
  padding: 8px

.team-logo
  position: fixed
  bottom: 0px
  left: 5px
  width: 30px

.broken-p
  color: #00B7FF